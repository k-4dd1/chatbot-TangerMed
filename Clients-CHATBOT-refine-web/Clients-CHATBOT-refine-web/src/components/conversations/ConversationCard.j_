'use client';

import { MessageCircle, MoreVertical, Edit3, Trash2, Check, X } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import { useTheme } from '../../contexts/ThemeContext';

export const ConversationCard = ({
  conversation,
  isEditing,
  editTitle,
  onEditTitle,
  onStartEdit,
  onSaveEdit,
  onCancelEdit,
  onDelete,
  onOpen,
  onToggleMenu,
  showDropdown,
  formatDate,
  getPreview,
  getLastMessageDate
}) => {
  const { isDarkMode } = useTheme();

  const handleKeyPress = (e) => {
    if (e.key === 'Enter') {
      onSaveEdit(conversation.id);
    } else if (e.key === 'Escape') {
      onCancelEdit();
    }
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 30, scale: 0.95 }}
      animate={{ opacity: 1, y: 0, scale: 1 }}
      transition={{
        duration: 0.4,
        type: "spring",
        stiffness: 300,
        damping: 30,
      }}
      className={`
        rounded-2xl p-6 border shadow-sm relative transition-all duration-300 cursor-pointer
        ${isDarkMode
          ? 'bg-gray-800 border-gray-700 shadow-lg hover:bg-blue-900/20 hover:border-blue-700/30 hover:shadow-xl'
          : 'bg-white border-gray-200 shadow-md hover:bg-blue-50 hover:border-blue-200 hover:shadow-lg'
        }
      `}
      onClick={() => !isEditing && onOpen(conversation.id)}
    >
      <div className="flex items-start space-x-5">
        {/* Icon */}
        <div 
          className="relative w-14 h-14 rounded-2xl flex items-center justify-center flex-shrink-0 shadow-md !bg-blue-700"
          style={{
            background: isDarkMode 
              ? 'linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%)' 
              : 'linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)',
            boxShadow: isDarkMode 
              ? '0 10px 15px -3px rgba(37, 99, 235, 0.3), 0 4px 6px -2px rgba(37, 99, 235, 0.05)' 
              : '0 10px 15px -3px rgba(59, 130, 246, 0.3), 0 4px 6px -2px rgba(59, 130, 246, 0.05)'
          }}
        >
          <MessageCircle className="w-7 h-7 text-white" />
        </div>

        {/* Content */}
        <div className="flex-1 min-w-0">
          {isEditing ? (
            <div className="space-y-4" onClick={(e) => e.stopPropagation()}>
              <input
                type="text"
                value={editTitle}
                onChange={(e) => onEditTitle(e.target.value)}
                onKeyDown={handleKeyPress}
                className={`
                  w-full px-4 py-3 rounded-xl border focus:outline-none focus:ring-2 font-medium transition-all duration-300 text-[16px] shadow-md hover:shadow-lg
                  ${isDarkMode
                    ? 'bg-slate-800 border-slate-600 text-slate-100 focus:border-blue-700 focus:ring-blue-700'
                    : 'bg-white border-slate-300 text-slate-900 focus:border-blue-700 focus:ring-blue-700'
                  }
                `}
                autoFocus
              />
              <div className="flex space-x-3">
                <button
                  onClick={() => onSaveEdit(conversation.id)}
                  className={`
                    px-6 py-2 text-white rounded-xl text-sm font-semibold transition-colors duration-200
                    ${isDarkMode
                      ? 'bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 shadow-md hover:shadow-lg'
                      : 'bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 shadow-md hover:shadow-lg'
                    }
                  `}
                >
                  <Check className="w-4 h-4" />
                </button>
                <button
                  onClick={onCancelEdit}
                  className={`
                    px-6 py-2 text-white rounded-xl text-sm font-semibold transition-colors duration-200
                    ${isDarkMode
                      ? 'bg-gradient-to-r from-slate-600 to-slate-700 hover:from-slate-700 hover:to-slate-800 shadow-md hover:shadow-lg'
                      : 'bg-gradient-to-r from-slate-500 to-slate-600 hover:from-slate-600 hover:to-slate-700 shadow-md hover:shadow-lg'
                    }
                  `}
                >
                  <X className="w-4 h-4" />
                </button>
              </div>
            </div>
          ) : (
            <>
              <h3 className={`
                font-bold text-lg truncate mb-2 tracking-tight
                ${isDarkMode ? 'text-white' : 'text-gray-900'}
              `}>
                {conversation.title}
              </h3>
              <p className={`
                text-sm font-medium
                ${isDarkMode ? 'text-gray-300' : 'text-gray-600'}
              `}>
                {formatDate(getLastMessageDate(conversation))}
              </p>
              <p className={`
                text-sm line-clamp-2 leading-relaxed mt-2 opacity-90
                ${isDarkMode ? 'text-gray-400' : 'text-gray-500'}
              `}>
                {getPreview(conversation)}
              </p>
            </>
          )}
        </div>

        {/* Actions Menu */}
        {!isEditing && (
          <div className="relative">
            <button
              onClick={(e) => {
                e.stopPropagation();
                onToggleMenu(conversation.id);
              }}
              className={`
                p-3 rounded-xl transition-all duration-200
                ${isDarkMode
                  ? 'hover:bg-blue-800/30 active:bg-blue-700/40'
                  : 'hover:bg-blue-100 active:bg-blue-200'
                }
              `}
            >
              <MoreVertical className={`
                w-5 h-5
                ${isDarkMode ? 'text-gray-400' : 'text-gray-500'}
              `} />
            </button>

            <AnimatePresence>
              {showDropdown && (
                <motion.div
                  initial={{ opacity: 0, scale: 0.95, y: -10 }}
                  animate={{ opacity: 1, scale: 1, y: 0 }}
                  exit={{ opacity: 0, scale: 0.95, y: -10 }}
                  transition={{ duration: 0.2, type: "spring", stiffness: 400 }}
                  className={`
                    absolute right-0 top-14 rounded-xl shadow-lg py-2 w-48 z-[70] border
                    ${isDarkMode
                      ? 'bg-gray-700 border-gray-600'
                      : 'bg-white border-gray-300'
                    }
                  `}
                  onClick={(e) => e.stopPropagation()}
                >
                  <button
                    onClick={() => onStartEdit(conversation.id, conversation.title)}
                    className={`
                      w-full px-4 py-2 text-left flex items-center space-x-3 transition-colors duration-150 font-medium
                      ${isDarkMode
                        ? 'text-gray-300 hover:bg-gray-600 hover:text-white'
                        : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
                      }
                    `}
                  >
                    <Edit3 className="w-4 h-4" />
                    <span>Modifier</span>
                  </button>
                  <button
                    onClick={() => onDelete(conversation.id)}
                    className={`
                      w-full px-4 py-2 text-left flex items-center space-x-3 transition-colors duration-150 font-medium
                      ${isDarkMode
                        ? 'text-red-400  '
                        : 'text-red-600  '
                      }
                    `}
                  >
                    <Trash2 className="w-4 h-4" />
                    <span>Supprimer</span>
                  </button>
                </motion.div>
              )}
            </AnimatePresence>
          </div>
        )}
      </div>
    </motion.div>
  );
}; 